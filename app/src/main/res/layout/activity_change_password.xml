<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar" />

    <jp.newbees.mastersip.customviews.HiraginoEditText
        android:id="@+id/edt_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_text_field_h"
        android:paddingLeft="@dimen/common_margin"
        android:hint="@string/authentication_code"
        android:textColorHint="@color/dark_gray"
        android:background="@color/white"/>

    <jp.newbees.mastersip.customviews.HiraginoEditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_text_field_h"
        android:layout_marginTop="@dimen/_1dp"
        android:paddingLeft="@dimen/common_margin"
        android:hint="@string/hint_pass"
        android:textColorHint="@color/dark_gray"
        android:inputType="textPassword"
        android:background="@color/white"/>

    <jp.newbees.mastersip.customviews.HiraginoButton
        android:id="@+id/btn_registration"
        style="@style/style_button_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/bg_button_primary_big"
        android:layout_centerHorizontal="true"
        android:text="@string/registration"/>
</LinearLayout>