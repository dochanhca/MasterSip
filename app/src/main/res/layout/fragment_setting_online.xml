<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/fragment_action_bar"
        layout="@layout/layout_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/common_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/avatar_size_normal"
            android:layout_height="@dimen/avatar_size_normal"
            android:layout_margin="@dimen/normal_margin"
            android:src="@drawable/ic_boy_default" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginTop="@dimen/common_margin"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.3"
            android:text="たくみさんがオンライン状態になると、
毎回PUSH通知を受け取ることができます。
通知をONにして気軽にチェックしよう！"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_text_field_h"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@drawable/bg_corner_layout">

            <jp.newbees.mastersip.customviews.HiraginoTextView
                style="@style/style_title_text_view_small"
                android:text="@string/notify_settings" />

            <CheckBox
                android:id="@+id/cb_online_setting"
                style="@style/style_img_right_text_field_common"
                android:button="@drawable/cb_blue_selector" />
        </RelativeLayout>

        <jp.newbees.mastersip.customviews.HiraginoButton
            android:id="@+id/btn_setting_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/bg_button_primary_big"
            android:gravity="center"
            android:text="@string/save_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp" />

    </LinearLayout>
</LinearLayout>