<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rdo_follow_group"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdo_followers"
                android:checked="false"
                android:button="@android:color/transparent"
                android:background="@drawable/selector_corner_left_segment"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:text="@string/follower"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_button_segment" />

            <RadioButton
                android:id="@+id/rdo_following"
                android:text="@string/following"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:checked="false"
                android:layout_width="0dp"
                android:background="@drawable/selector_corner_right_segment"
                android:layout_height="@dimen/height_button_segment" />

        </RadioGroup>

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:layout_marginTop="@dimen/_16dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_follow_description"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_color_gray"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/action_bar_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_follow"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layoutManager= "android.support.v7.widget.LinearLayoutManager"
                ></android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>