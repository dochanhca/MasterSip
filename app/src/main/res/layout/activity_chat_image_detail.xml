<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_action_bar"
        android:layout_above="@+id/layout_bottom_action"
        android:background="@color/black"></FrameLayout>

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/layout_bottom_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_h"
        android:layout_alignParentBottom="true"
        android:background="@color/black_transparent_70"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_left_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <jp.newbees.mastersip.customviews.HiraginoTextView
                android:id="@+id/txt_save_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_download_photo"
                android:paddingTop="@dimen/_5dp"
                android:drawablePadding="@dimen/_2dp"
                android:gravity="center_horizontal"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <jp.newbees.mastersip.customviews.HiraginoTextView
                android:id="@+id/txt_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_report"
                android:paddingTop="@dimen/_5dp"
                android:drawablePadding="@dimen/_2dp"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:text="@string/report"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_h"
        android:background="@color/black_transparent_70"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:src="@drawable/ic_close_white" />
    </RelativeLayout>

</RelativeLayout>