<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/ll_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_img_gift"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="@dimen/img_gift_size"
            android:layout_height="@dimen/img_gift_size"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/bg_circle_primary_dark">
            <ImageView
                android:id="@+id/img_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
             />
            </LinearLayout>
        <TextView
            android:id="@+id/txt_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10dp"
            android:text="スイーツ"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:text="10pt"
            android:textColor="@color/blue_gifts_desc"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>