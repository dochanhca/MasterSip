<?xml version="1.0" encoding="utf-8"?>
<jp.newbees.mastersip.customviews.SoftKeyboardLsnedRelaytiveLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider">

    <include
        android:id="@+id/action_bar01"
        layout="@layout/layout_action_bar" />

    <RelativeLayout
        android:id="@+id/rl_chat_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:minHeight="@dimen/height_footer_chat">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/colorPrimary" />

        <!--<ImageView-->
        <!--android:id="@+id/ic_plus_footer_chat"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:paddingLeft="@dimen/normal_margin"-->
        <!--android:src="@drawable/ic_plus_footer_chat" />-->

        <!--<ImageView-->
        <!--android:id="@+id/ic_smile_footer_chat"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_toRightOf="@id/ic_plus_footer_chat"-->
        <!--android:paddingLeft="@dimen/normal_margin"-->
        <!--android:src="@drawable/ic_smile_footer_chat" />-->

        <ImageView
            android:id="@+id/img_left_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_footer_chat"
            android:paddingLeft="@dimen/normal_margin"
            android:src="@drawable/img_capture" />

        <!--<ImageView-->
        <!--android:id="@+id/ic_phone_footer_chat"-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:paddingRight="@dimen/normal_margin"-->
        <!--android:src="@drawable/ic_phone_footer_chat" />-->

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_send"
            style="@style/origin_style_content_text_view_with_padding_LR"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_footer_chat_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="@drawable/bg_blue_dark"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <jp.newbees.mastersip.customviews.HiraginoEditText
            android:id="@+id/edt_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_toLeftOf="@id/txt_send"
            android:layout_toRightOf="@id/img_left_action"
            android:background="@drawable/bg_white_blue_stroke"
            android:minHeight="@dimen/height_footer_chat_content"
            android:nextFocusLeft="@id/edt_chat"
            android:nextFocusUp="@id/edt_chat"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/divider"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@color/colorPrimary" />-->
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_chat_input"
        android:layout_below="@id/action_bar01">

        <LinearLayout
            android:id="@+id/swap_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/xnormal_margin">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/container_action_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_search_height"
        android:layout_below="@id/action_bar01">

        <jp.newbees.mastersip.customviews.NavigationLayoutGroup
            android:id="@+id/custom_action_header_in_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_dark"
            android:orientation="horizontal"
            app:dividerColor="@color/white"
            app:showDivider="true">

            <jp.newbees.mastersip.customviews.NavigationLayoutChild
                android:id="@+id/nav_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:iconNormal="@drawable/ic_profile_in_chat"
                app:state="true"
                app:text="@string/profile"
                app:textColorNormal="@color/white"
                app:textColorSelected="@color/white">

            </jp.newbees.mastersip.customviews.NavigationLayoutChild>

            <jp.newbees.mastersip.customviews.NavigationLayoutChild
                android:id="@+id/nav_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:iconNormal="@drawable/ic_photo_in_chat"
                app:text="@string/photo"
                app:textColorNormal="@color/white">

            </jp.newbees.mastersip.customviews.NavigationLayoutChild>

            <jp.newbees.mastersip.customviews.NavigationLayoutChild
                android:id="@+id/nav_leg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:iconNormal="@drawable/ic_gift_in_chat"
                app:text="@string/gift"
                app:textColorNormal="@color/white" />

            <jp.newbees.mastersip.customviews.NavigationLayoutChild
                android:id="@+id/nav_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:iconNormal="@drawable/ic_follow_in_chat"
                app:text="@string/follow"
                app:textColorNormal="@color/white" />
        </jp.newbees.mastersip.customviews.NavigationLayoutGroup>

        <LinearLayout
            android:id="@+id/call_action_header_in_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/action_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/header_search_height"
                android:layout_weight="1"
                android:background="@color/on_phone_color_in_search"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/small_margin"
                    android:src="@drawable/ic_voice_call" />

                <jp.newbees.mastersip.customviews.HiraginoTextView
                    style="@style/origin_style_content_text_view_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_call_in_message"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_video"
                android:layout_width="0dp"
                android:layout_height="@dimen/header_search_height"
                android:layout_weight="1"
                android:background="@color/on_video_color_in_search"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/small_margin"
                    android:src="@drawable/ic_video_call" />

                <jp.newbees.mastersip.customviews.HiraginoTextView
                    style="@style/origin_style_content_text_view_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_call_in_message"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</jp.newbees.mastersip.customviews.SoftKeyboardLsnedRelaytiveLayout>