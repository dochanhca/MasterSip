<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_bg"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_actions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_search_height"
                android:layout_below="@+id/layout_action_bar"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:orientation="horizontal">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_chat"
                        style="@style/style_button_common"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/green"
                        android:drawableLeft="@drawable/ic_chat"
                        android:drawablePadding="@dimen/margin_2"
                        android:text="@string/chat"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_voice_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:orientation="horizontal">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_voice_call"
                        style="@style/style_button_common"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_voice_call"
                        android:drawablePadding="@dimen/margin_2"
                        android:text="@string/voice_call"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_video_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:orientation="horizontal">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_video_call"
                        style="@style/style_button_common"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_video_call"
                        android:drawablePadding="@dimen/margin_2"
                        android:text="@string/video_call"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/layout_profile_detail_header" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_user_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_user_image_h"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/common_margin"
                        android:paddingRight="@dimen/common_margin"
                        android:paddingTop="@dimen/margin_10"></android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_profile_action_detail_h"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@color/white"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/btn_follow"
                            style="@style/custom_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_btn_follow"
                            android:drawablePadding="@dimen/margin_5"
                            android:drawableTop="@drawable/ic_follow_selector"
                            android:text="@string/follow"
                            android:textColor="@color/btn_follow_text_color" />

                        <jp.newbees.mastersip.customviews.HiraginoButton
                            android:id="@+id/btn_send_gift"
                            style="@style/custom_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_btn_send_gift"
                            android:drawableTop="@drawable/ic_gift_blue"
                            android:text="@string/send_a_give"
                            android:textColor="@color/colorPrimaryDark" />

                        <jp.newbees.mastersip.customviews.HiraginoButton
                            android:id="@+id/btn_on_off_notify"
                            style="@style/custom_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_btn_on_off_notify"
                            android:drawableTop="@drawable/ic_speaker_blue"
                            android:text="@string/online_notify"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <include layout="@layout/layout_profile_detail" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>