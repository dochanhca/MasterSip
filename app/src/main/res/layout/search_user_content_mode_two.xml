<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_item_search_user"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_boy_default"/>

            <jp.newbees.mastersip.customviews.HiraginoTextView
                android:id="@+id/txt_content"
                style="@style/origin_style_content_text_view_with_padding_LR"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_item_search_user"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:text="Sunt sectames contactus noster, grandis tataes."
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/img_action_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:src="@drawable/ic_avatar_message_large" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_about"
            style="@style/origin_style_content_text_view_small_with_padding_LR"
            android:layout_width="match_parent"
            android:background="@drawable/bg_about_mode_two"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin"
            android:text="All children like simmered noodles in orange juice and curry."
            android:textColor="@color/dark_gray" />

    </LinearLayout>
</android.support.v7.widget.CardView>