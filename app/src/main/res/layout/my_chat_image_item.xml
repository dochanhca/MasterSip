<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/xnormal_margin"
    android:paddingRight="@dimen/normal_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/card_image"
        app:cardCornerRadius="@dimen/chat_image_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/normal_margin">
        <ImageView
            android:id="@+id/img_chat_item"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/chat_image_side"
            android:layout_height="@dimen/chat_image_side" />
        </android.support.v7.widget.CardView>

    <jp.newbees.mastersip.customviews.HiraginoTextView
        android:id="@+id/txt_time"
        style="@style/origin_style_content_text_view_tiny"
        android:textColor="@color/dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/card_image"
        android:layout_toLeftOf="@id/card_image"
        android:paddingRight="@dimen/small_margin"
        android:text="12:34" />

    <jp.newbees.mastersip.customviews.HiraginoTextView
        android:id="@+id/txt_state"
        style="@style/origin_style_content_text_view_tiny"
        android:visibility="gone"
        android:textColor="@color/dark_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_time"
        android:layout_toLeftOf="@id/card_image"
        android:paddingRight="@dimen/small_margin"
        android:text="@string/txt_already_read" />


</RelativeLayout>