<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:cardCornerRadius="@dimen/corner_5">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/size_avatar_mode_list"
                    android:layout_height="@dimen/size_avatar_mode_list"
                    android:src="@drawable/ic_boy_default" />

                <ImageView
                    android:id="@+id/img_action_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tiny_margin"
                    android:layout_marginTop="@dimen/tiny_margin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar_message_small" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_time"
            style="@style/origin_style_content_text_view_tiny"
            android:layout_marginRight="10dp"
            android:text="10 hour"
            android:textColor="@color/text_color_gray"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@+id/ic_time" />

        <ImageView
            android:id="@+id/ic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_toLeftOf="@id/txt_time"
            android:paddingRight="@dimen/tiny_margin"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/txt_location"
            style="@style/origin_style_content_text_view_tiny"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_toLeftOf="@id/ic_time"
            android:text="ha noi"
            android:textColor="@color/text_color_gray" />

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_toLeftOf="@id/txt_location"
            android:paddingRight="@dimen/tiny_margin"
            android:src="@drawable/ic_location" />


        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_title"
            style="@style/origin_style_title_text_view_small"
            android:layout_below="@id/txt_time"
            android:layout_toRightOf="@id/avatar_container"
            android:paddingRight="@dimen/normal_margin"
            android:paddingTop="@dimen/small_margin"
            android:paddingBottom="@dimen/small_margin"
            android:text="A falsis, demissio brevis devirginato."
            android:textColor="@color/black" />


        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_value"
            style="@style/origin_style_content_text_view_small"
            android:layout_below="@id/txt_title"
            android:layout_toRightOf="@id/avatar_container"
            android:paddingBottom="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:paddingTop="@dimen/small_margin"
            android:text="Special sex studies most ascensions."
            android:textColor="@color/text_color_gray"
            android:maxLines="2"
            android:ellipsize="end"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content"
        android:background="@color/divider" />
</RelativeLayout>
