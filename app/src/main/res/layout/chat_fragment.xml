<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"
    android:paddingBottom="@dimen/action_bar_h">

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_search_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/header_search_height"
            android:layout_weight="1"
            android:background="@color/on_phone_color_in_search"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/small_margin"
                android:src="@drawable/ic_call_in_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_call_in_message" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_video"
            android:layout_width="0dp"
            android:layout_height="@dimen/header_search_height"
            android:layout_weight="1"
            android:background="@color/on_video_color_in_search"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/small_margin"
                android:src="@drawable/ic_video_in_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_call_in_message" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_chat_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer_chat"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ic_plus_footer_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/normal_margin"
            android:src="@drawable/ic_plus_footer_chat" />

        <ImageView
            android:id="@+id/ic_smile_footer_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ic_plus_footer_chat"
            android:paddingLeft="@dimen/normal_margin"
            android:src="@drawable/ic_smile_footer_chat" />

        <ImageView
            android:id="@+id/ic_phone_footer_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/normal_margin"
            android:src="@drawable/ic_phone_footer_chat" />

        <jp.newbees.mastersip.customviews.HiraginoEditText
            android:id="@+id/edt_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/ic_phone_footer_chat"
            android:layout_toRightOf="@id/ic_smile_footer_chat"
            android:background="@drawable/bg_white_blue_stroke"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <jp.newbees.mastersip.customviews.ChatHistory
        android:id="@+id/ll_chat_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_chat_input"
        android:layout_below="@id/action_container"
        android:orientation="vertical">

    </jp.newbees.mastersip.customviews.ChatHistory>

</RelativeLayout>