<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_search"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_search"
            android:text="@string/search_condition"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/normal_margin"
            android:background="@drawable/bg_white_with_large_border"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:gravity="center"
            android:paddingRight="@dimen/normal_margin"
            android:paddingLeft="@dimen/normal_margin"
            style="@style/style_content_text_view_tiny"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_search_height" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_phone"
            android:text="@string/call_phone"
            android:visibility="gone"
            android:background="@drawable/bg_white_with_large_border"
            android:paddingLeft="@dimen/xnormal_margin"
            android:paddingRight="@dimen/xnormal_margin"
            android:paddingTop="@dimen/margin_2"
            android:layout_marginRight="@dimen/normal_margin"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/ic_phone"
            style="@style/style_content_text_view_tiny"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_search_height" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_green_normal">

        <jp.newbees.mastersip.customviews.SegmentedGroup
            android:id="@+id/segmented_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/normal_margin"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/normal_margin"
            android:paddingTop="@dimen/normal_margin"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="@color/white"
            segmentedgroup:sc_corner_radius="20dp"
            segmentedgroup:sc_tint_color="@color/colorPrimaryDark"
            segmentedgroup:sc_unchecked_text_color="@color/white">

            <RadioButton
                android:id="@+id/btn_filter_call_waiting"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_call_waiting" />

            <RadioButton
                android:id="@+id/btn_filter_new"
                style="@style/RadioButton"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_new" />

            <RadioButton
                android:id="@+id/btn_filter_all"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_all" />

        </jp.newbees.mastersip.customviews.SegmentedGroup>

        <ImageView
            android:id="@+id/img_filter"
            android:src="@drawable/ic_0"
            android:background="@drawable/bg_white_with_large_border"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_search_height" />
    </RelativeLayout>

</RelativeLayout>