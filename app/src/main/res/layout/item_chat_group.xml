<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_lv_common">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="@drawable/cb_red_selector"
        android:visibility="gone"
        android:clickable="false"
        />

    <RelativeLayout
        android:layout_toRightOf="@+id/cb_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView
            android:id="@+id/avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:cardCornerRadius="@dimen/corner_5">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/size_avatar_mode_list"
                android:layout_height="@dimen/size_avatar_mode_list"
                android:scaleType="centerCrop"
                />
        </android.support.v7.widget.CardView>

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_time"
            style="@style/origin_style_content_text_view_xtiny"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/normal_margin"
            android:text="15:10"
            android:textColor="@color/text_color_gray" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_user_name"
            style="@style/origin_style_title_text_view_small"
            android:layout_below="@id/txt_time"
            android:layout_toRightOf="@id/avatar_container"
            android:layout_toLeftOf="@+id/txt_message_number"
            android:paddingBottom="@dimen/_2dp"
            android:paddingRight="@dimen/normal_margin"
            android:paddingTop="@dimen/small_margin"
            android:text="A falsis, demissio brevis."
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black" />


        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_message"
            style="@style/origin_style_content_text_view_small"
            android:layout_below="@+id/txt_user_name"
            android:layout_toRightOf="@+id/avatar_container"
            android:layout_toLeftOf="@+id/txt_message_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:singleLine="true"
            android:text="Special sex studies most ascensions."
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/txt_message_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25dp"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_number_message_text"
            android:gravity="center"
            android:minWidth="@dimen/_25dp"
            android:textSize="@dimen/text_size_12"
            android:text="22"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/txt_message" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/cb_select"
        android:layout_below="@id/content"
        android:background="@color/divider" />
</RelativeLayout>
