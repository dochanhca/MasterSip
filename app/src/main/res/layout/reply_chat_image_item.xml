<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/xnormal_margin"
    android:paddingLeft="@dimen/normal_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_reply_avatar"
        android:layout_width="@dimen/avatar_reply_chat_size"
        android:layout_height="@dimen/avatar_reply_chat_size"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_image"
        app:cardCornerRadius="@dimen/chat_image_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toRightOf="@id/img_reply_avatar"
        android:padding="@dimen/normal_margin">
        <ImageView
            android:id="@+id/img_chat_item"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/chat_image_side"
            android:layout_height="@dimen/chat_image_side" />
    </android.support.v7.widget.CardView>

    <jp.newbees.mastersip.customviews.HiraginoTextView
        android:id="@+id/txt_time"
        style="@style/origin_style_content_text_view_tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/card_image"
        android:layout_toRightOf="@id/card_image"
        android:paddingLeft="@dimen/small_margin"
        android:text="12:34"
        android:textColor="@color/dark_gray" />

</RelativeLayout>