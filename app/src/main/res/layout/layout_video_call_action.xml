<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/xnormal_margin"
    android:layout_marginRight="@dimen/xnormal_margin"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/margin_25">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_cancel_call"
            android:layout_width="@dimen/video_call_action_size"
            android:layout_height="@dimen/video_call_action_size"
            android:src="@drawable/bg_ic_cancel_video_call" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btn_on_off_mic"
            android:layout_width="@dimen/video_call_action_size"
            android:layout_height="@dimen/video_call_action_size"
            android:background="@drawable/bg_ic_mic_state"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btn_on_off_speaker"
            android:layout_width="@dimen/video_call_action_size"
            android:layout_height="@dimen/video_call_action_size"
            android:background="@drawable/bg_ic_speaker_state_video_call"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btn_on_off_camera"
            android:layout_width="@dimen/video_call_action_size"
            android:layout_height="@dimen/video_call_action_size"
            android:checked="true"
            android:background="@drawable/bg_ic_camera_state_video_call"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
</LinearLayout>