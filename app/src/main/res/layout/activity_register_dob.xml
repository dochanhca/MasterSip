<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_bg">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar" />

    <!--Lay out select date of birth-->
    <RelativeLayout
        android:id="@+id/layout_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_simple_text_field_bg" />
        <jp.newbees.mastersip.customviews.HiraginoTextView
            style="@style/style_title_text_view"
            android:text="@string/select_dob" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_dob"
            style="@style/style_content_text_view"
            android:layout_toLeftOf="@+id/img_arrow_right_dob" />
        <ImageView
            android:id="@+id/img_arrow_right_dob"
            style="@style/style_img_right_text_field_common"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_separate_line"/>

    <!--Lay out select gender-->
    <RelativeLayout
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_simple_text_field_bg" />
        <jp.newbees.mastersip.customviews.HiraginoTextView
            style="@style/style_title_text_view"
            android:text="@string/select_gender" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_gender"
            style="@style/style_content_text_view"
            android:layout_toLeftOf="@+id/img_arrow_right_gender" />
        <ImageView
            android:id="@+id/img_arrow_right_gender"
            style="@style/style_img_right_text_field_common"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20">
        <jp.newbees.mastersip.customviews.HiraginoButton
            android:id="@+id/btn_term_of_services"
            android:background="@drawable/bg_button_gray_small"
            android:layout_alignLeft="@+id/rv_accep_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_button_small"
            android:text="@string/terms_of_service"/>

        <jp.newbees.mastersip.customviews.HiraginoButton
            android:id="@+id/btn_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/rv_accep_policy"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/bg_button_gray_small"
            style="@style/style_button_small"
            android:text="@string/policy"
            />

        <com.andexert.library.RippleView
            android:id="@+id/rv_accep_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_term_of_services"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/img_accep_policy"
            android:layout_below="@+id/img_term_of_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_register_dob"
            android:layout_centerHorizontal="true" />

        </com.andexert.library.RippleView>
    </RelativeLayout>
</LinearLayout>