<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_boy_default"
        app:riv_corner_radius="@dimen/corner_item_search_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_item_search_user">

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_content"
            style="@style/origin_style_content_text_view_tiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:layout_marginTop="@dimen/tiny_margin"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:text="Pol, adelphis!"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_action_top"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_avatar_message_small" />
</RelativeLayout>