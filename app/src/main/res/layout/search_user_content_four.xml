<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_item_search_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_boy_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_item_search_user">

            <jp.newbees.mastersip.customviews.HiraginoTextView
                android:id="@+id/txt_name"
                style="@style/origin_style_content_text_view_xtiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:layout_marginTop="@dimen/tiny_margin"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"
                android:paddingBottom="@dimen/margin_2"
                android:text="Pol, adelphis!"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_available_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4dp"
            android:layout_marginTop="@dimen/_4dp"
            android:src="@drawable/ic_avatar_phone_small" />

        <ImageView
            android:id="@+id/img_available_video"
            android:layout_toRightOf="@+id/img_available_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tiny_margin"
            android:layout_marginTop="@dimen/_4dp"
            android:src="@drawable/ic_avatar_video_small" />


    </RelativeLayout>

</android.support.v7.widget.CardView>