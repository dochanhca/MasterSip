<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_gray_bg">

    <include
        layout="@layout/layout_action_bar"
        />

    <jp.newbees.mastersip.customviews.HiraginoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:text="@string/pls_enter_email_you_registered"
        android:gravity="center_horizontal"/>

    <jp.newbees.mastersip.customviews.HiraginoEditText
        android:id="@+id/edt_email"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_text_field_h"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:paddingLeft="@dimen/common_margin"
        android:hint="@string/hint_email"
        android:textColorHint="@color/opacity_gray"/>

    <jp.newbees.mastersip.customviews.HiraginoButton
        android:id="@+id/btn_send"
        style="@style/style_button_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/bg_button_primary_big"
        android:layout_centerHorizontal="true"
        android:text="@string/send"/>
</LinearLayout>