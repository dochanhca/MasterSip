<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_bg"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_search_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/switch_mode_in_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:src="@drawable/ic_edit_profile_info" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_action_bar" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/action_bar_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/group_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_green_normal">

                <RelativeLayout
                    android:id="@+id/group_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/group_point"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="80dp"
                        android:minWidth="80dp" />

                    <TextView
                        android:id="@+id/txt_approving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img_avatar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="@string/approving"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sp"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/group_upload_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_mask_uploading"
                        android:visibility="gone">

                        <com.pnikosis.materialishprogress.ProgressWheel
                            android:id="@+id/prw_upload_avatar"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            app:matProg_barColor="@color/blue_dark"
                            app:matProg_rimColor="@color/white"
                            app:matProg_rimWidth="3dp" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/btn_change_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/img_avatar"
                        android:layout_alignRight="@id/img_avatar"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_camera_edit_picture_profile" />

                    <ImageView
                        android:id="@+id/img_mask_approving"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_mask_approving"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/group_point"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/layout_my_notify"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/group_avatar"
                    android:background="@drawable/bg_corner_layout">

                    <LinearLayout
                        android:id="@+id/parent_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_point" />

                        <jp.newbees.mastersip.customviews.HiraginoTextView
                            android:id="@+id/txt_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3dp"
                            android:layout_toRightOf="@id/img_point"
                            android:background="@color/transparent"
                            android:lines="1"
                            android:text="99999999"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/txt_point"
                            android:paddingTop="@dimen/_1dp"
                            android:text="@string/pt"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                    <jp.newbees.mastersip.customviews.HiraginoButton
                        android:id="@+id/btn_buy_point"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_below="@id/parent_point"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginRight="@dimen/_15dp"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingRight="@dimen/_10dp"
                        android:text="ポイント購入"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_my_notify"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@drawable/bg_white_selector_with_corner">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/hiraginoTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableTop="@drawable/ic_my_notify"
                        android:text="@string/notice"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>

                <jp.newbees.mastersip.customviews.HiraginoTextView
                    android:id="@+id/txt_message_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/bg_number_message_text"
                    android:gravity="center"
                    android:minWidth="@dimen/_25dp"
                    android:text="22"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_0"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/group_1"
                    android:layout_width="@dimen/small_user_image_size"
                    android:layout_height="@dimen/small_user_image_size"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_12dp">

                    <ImageButton
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_common_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_camera_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="40dp"
                        android:text="写真を追加"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <RelativeLayout
                        android:id="@+id/group_upload_photo_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_mask_upload_photo_gallery"
                        android:visibility="gone">

                        <com.pnikosis.materialishprogress.ProgressWheel
                            android:id="@+id/prw_upload_photo_gallery"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            app:matProg_barColor="@color/blue_dark"
                            app:matProg_rimColor="@color/white"
                            app:matProg_rimWidth="3dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_list_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_2"
                android:orientation="vertical">


                <!-- action group 1-->
                <jp.newbees.mastersip.customviews.HiraginoTextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_15"
                    android:text="@string/menu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_online_list"
                        style="@style/style_text_view_with_button_my_menu"
                        android:drawableTop="@drawable/ic_online_list_female"
                        android:text="男性 \nオンライン通知" />

                    <View
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_call_history"
                        style="@style/style_text_view_with_button_my_menu"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableTop="@drawable/ic_my_call_history"
                        android:paddingTop="@dimen/_25dp"
                        android:text="@string/call_history" />

                    <View
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_block_list"
                        style="@style/style_text_view_with_button_my_menu"
                        android:layout_height="match_parent"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableTop="@drawable/ic_block_list"
                        android:paddingTop="@dimen/_25dp"
                        android:text="@string/block_list" />
                </LinearLayout>

                <!-- action group 2-->
                <jp.newbees.mastersip.customviews.HiraginoTextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_15"
                    android:text="@string/setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_notify_setting"
                        style="@style/style_text_view_with_button_my_menu"
                        android:drawableTop="@drawable/ic_notify_setting"
                        android:text="@string/notify_settings" />

                    <View
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_email_backup_setting"
                        style="@style/style_text_view_with_button_my_menu"
                        android:drawableTop="@drawable/ic_mail_backup_setting"
                        android:text="@string/mail_address_setting" />

                    <View
                        android:id="@+id/divider_email_backup"
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_call_setting"
                        style="@style/style_text_view_with_button_my_menu"
                        android:drawableTop="@drawable/ic_call_setting"
                        android:text="@string/call_settings" />
                </LinearLayout>

                <!--action group 3-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_bar_h"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_guide"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_lv_common">

                        <ImageView
                            android:id="@+id/img_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/ic_guide" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/ic_arrow_right_blue" />

                        <jp.newbees.mastersip.customviews.HiraginoTextView
                            android:id="@+id/hiraginoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toEndOf="@+id/img_guide"
                            android:text="@string/how_to_use"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_13" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <RelativeLayout
                        android:id="@+id/layout_contact"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_lv_common">

                        <ImageView
                            android:id="@+id/img_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/ic_contact" />

                        <jp.newbees.mastersip.customviews.HiraginoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@id/img_contact"
                            android:text="@string/contact_us"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/ic_arrow_right_blue" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_bar_h"
                    android:layout_marginTop="@dimen/_1dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_common_guide"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_item_lv_common">

                        <ImageView
                            android:id="@+id/img_common_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/ic_common_guide" />

                        <jp.newbees.mastersip.customviews.HiraginoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_toRightOf="@id/img_common_guide"
                            android:text="@string/various_guidance"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/ic_arrow_right_blue" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/_1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_gray_bg" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/ic_common_guide"
                            android:visibility="invisible" />

                        <jp.newbees.mastersip.customviews.HiraginoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="@string/various_guidance"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_13"
                            android:visibility="invisible" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_10"
                            android:src="@drawable/ic_arrow_right_blue"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <!--Profile detail-->
                <RelativeLayout
                    android:id="@+id/layout_profile_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_h"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@drawable/bg_item_lv_common">

                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/ic_search_blue" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_toRightOf="@id/img_search"
                        android:text="@string/check_your_profile_page"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"
                        android:src="@drawable/ic_arrow_right_blue" />
                </RelativeLayout>

                <jp.newbees.mastersip.customviews.HiraginoButton
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/action_bar_h"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorPrimary"
                    android:text="@string/logout"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>