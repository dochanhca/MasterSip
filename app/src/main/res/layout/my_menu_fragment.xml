<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_content_search"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_h"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/switch_mode_in_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:src="@drawable/ic_edit_profile_info" />

        <jp.newbees.mastersip.customviews.HiraginoTextView
            android:id="@+id/txt_action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_action_bar" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/group_0"
                android:background="@color/bg_green_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:minHeight="81dp"
                    android:minWidth="81dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_alignTop="@+id/group_point"
                    android:layout_marginLeft="@dimen/_15dp"
                    />

                <jp.newbees.mastersip.customviews.HiraginoTextView
                    android:id="@+id/txt_approving"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sp"
                    android:paddingLeft="25dp"
                    android:paddingTop="55dp"
                    android:layout_alignTop="@id/img_avatar"
                    android:layout_alignBottom="@id/img_avatar"
                    android:layout_alignLeft="@id/img_avatar"
                    android:text="@string/approving"
                    />

                <ImageButton
                    android:id="@+id/btn_change_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_avatar"
                    android:layout_alignRight="@id/img_avatar"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_camera_edit_picture_profile" />

                <RelativeLayout
                    android:id="@+id/group_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_toRightOf="@id/img_avatar"
                    android:background="@drawable/bg_white">

                    <LinearLayout
                        android:id="@+id/parent_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15dp"
                            android:src="@drawable/ic_point" />

                        <TextView
                            android:id="@+id/txt_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img_point"
                            android:background="@color/transparent"
                            android:lines="1"
                            android:text="99999999"
                            android:textColor="@color/blue_dark"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/txt_point"
                            android:text="@string/pt"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                    <jp.newbees.mastersip.customviews.HiraginoButton
                        android:id="@+id/btn_buy_point"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_below="@id/parent_point"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginRight="@dimen/_15dp"
                        android:background="@drawable/bg_blue_button"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingRight="@dimen/_10dp"
                        android:text="ポイント購入"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/group_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_0"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/group_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_12dp">

                    <ImageButton
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_common_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_camera_plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="40dp"
                        android:text="写真を追加"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <RelativeLayout
                        android:id="@+id/group_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/img_mask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mask">

                        </ImageView>

                    </RelativeLayout>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_list_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_2"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="horizontal">

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btn_logout"
                        android:src="@color/transparent"
                        android:background="@drawable/bg_white_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_marginLeft="@dimen/_15dp"
                        android:id="@+id/img_logout"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_log_out" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:layout_toRightOf="@id/img_logout"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:textColor="@color/blue_dark"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_11sp"
                        android:text="@string/logout"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/bg_white_button"
                    android:layout_marginLeft="@dimen/_1dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btn_backup_email"
                        android:src="@color/transparent"
                        android:background="@drawable/bg_white_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_marginLeft="@dimen/_15dp"
                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_mail" />

                    <jp.newbees.mastersip.customviews.HiraginoTextView
                        android:id="@+id/txt_back_up_email"
                        android:layout_marginTop="@dimen/_15dp"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_toRightOf="@id/img_email"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:textColor="@color/blue_dark"
                        android:textSize="@dimen/_11sp"
                        android:layout_centerVertical="true"
                        android:text="@string/email_backup"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>