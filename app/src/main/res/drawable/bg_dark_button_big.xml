<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/_3dp">
                <shape>
                    <solid android:color="@color/xx_dark_gray" />
                    <corners android:radius="@dimen/huge_radius" />
                    <stroke android:width="0dp" android:color="@color/transparent" />
                </shape>
            </item>

            <item android:bottom="@dimen/_3dp">
                <shape>
                    <solid android:color="#787878"></solid>
                    <stroke android:width="0dp" android:color="@color/transparent" />
                    <padding android:bottom="@dimen/_2dp" />
                    <corners android:radius="@dimen/huge_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="@color/xx_dark_gray" />
                    <corners android:radius="@dimen/huge_radius" />
                    <stroke android:width="0dp" android:color="@color/transparent" />
                </shape>
            </item>

            <item android:bottom="3dp">
                <shape>
                    <solid android:color="@color/text_color_gray"></solid>
                    <stroke android:width="0dp" android:color="@color/transparent" />
                    <corners android:radius="@dimen/huge_radius" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>