    <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/ic_speaker_on_video_call"/>
    <!--currently pressed turning the toggle on-->

    <item android:state_pressed="true" android:drawable="@drawable/ic_speaker_off_video_call"/>
