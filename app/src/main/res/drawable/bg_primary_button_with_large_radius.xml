<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="#388d92"/>
                    <corners android:radius="@dimen/_25dp" />
                    <stroke android:width="0dp" android:color="@color/transparent" />
                </shape>
            </item>

            <item android:bottom="3dp" >
                <shape>
                    <solid android:color="@color/selected_color"></solid>
                    <stroke android:width="0dp" android:color="@color/transparent" />
                    <padding android:bottom="2dp"/>
                    <corners android:radius="@dimen/_25dp" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:top="3dp">
                <shape>
                    <solid android:color="@color/selected_color"/>
                    <corners android:radius="@dimen/_25dp" />
                    <stroke android:width="0dp" android:color="@color/transparent" />
                </shape>
            </item>

            <item android:bottom="3dp" >
                <shape>
                    <solid android:color="@color/colorPrimary"></solid>
                    <stroke android:width="0dp" android:color="@color/transparent" />
                    <corners android:radius="@dimen/_25dp" />
                </shape>
            </item>

        </layer-list>
    </item>


</selector>