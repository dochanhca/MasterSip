<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDarkActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black_transparent_70</item>
    </style>

    <style name="AppThemeWithWhiteStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeHasActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="style_title_text_view" parent="style_common_text">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_marginLeft">@dimen/margin_15</item>
    </style>

    <style name="style_title_text_view_small" parent="style_common_text">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
    </style>

    <style name="style_content_text_view_small" parent="style_common_text">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="style_content_text_view_small_single_line" parent="style_content_text_view_small">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_content_text_view_tiny" parent="style_content_text_view_small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_content_text_view" parent="style_common_text">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>

    <style name="style_info_edittext" parent="style_common_text">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:cacheColorHint">@color/gray_holo_light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>

    <style name="style_img_right_text_field_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
    </style>

    <style name="style_content_text_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/common_text_field_h</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:paddingLeft">@dimen/margin_15</item>
        <item name="android:paddingRight">@dimen/margin_15</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_layout_text_field_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_text_field_h</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_button_big" parent="style_button_common">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="style_button_common">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_button_normal" parent="style_button_common">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="style_button_small" parent="style_button_common">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="RadioButton">
        <item name="android:minHeight">@dimen/header_filter_height</item>
        <item name="android:minWidth">@dimen/action_filter_search_width</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="custom_radio_button">
        <item name="android:minHeight">@dimen/header_search_height</item>
        <item name="android:minWidth">@dimen/action_profile_detail_w</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
        <item name="android:paddingTop">@dimen/margin_5</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="origin_style_content_text_view">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="origin_style_content_text_view_with_padding_LR" parent="origin_style_content_text_view">
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
    </style>

    <style name="origin_style_content_text_view_small">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="origin_style_content_text_view_small_with_padding_LR" parent="origin_style_content_text_view_small">
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
    </style>

    <style name="origin_style_title_text_view_small">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="origin_style_title_text_view_small_padding_LR" parent="origin_style_title_text_view_small">
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
    </style>

    <style name="origin_style_content_text_view_xtiny" parent="origin_style_content_text_view_small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="origin_style_content_text_view_tiny" parent="origin_style_content_text_view_small">
        <item name="android:textSize">@dimen/text_size_tiny</item>

    </style>

    <style name="style_profile_info_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/profile_detail_row_h</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_2</item>
        <item name="android:paddingTop">@dimen/margin_2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_title_text_view_profile" parent="style_title_text_view_small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="style_content_text_view_profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
        <item name="android:paddingBottom">@dimen/margin_2</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="custom_button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/header_search_height</item>
        <item name="android:minWidth">@dimen/action_profile_detail_w</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:drawablePadding">@dimen/_3dp</item>
        <item name="android:paddingBottom">@dimen/margin_5</item>
        <!--<item name="android:drawablePadding">@dimen/_2dp</item>-->
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="origin_style_edit_text_input">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColorHint">@color/text_color_gray_hint</item>
        <item name="android:paddingRight">@dimen/normal_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/margin_15</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="style_text_view_with_button_my_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_15dp</item>
        <item name="android:paddingTop">@dimen/_15dp</item>
        <item name="android:paddingBottom">@dimen/_15dp</item>
        <item name="android:background">@drawable/bg_item_lv_common</item>
    </style>
</resources>
